
<h1><%= title %></h1>
<p>Hello <%= user %>, welcome to <%= title %> at <%= contentName %> | UserPortal</p>

<br/>

<form>
  <div class="form-group">
    <label for="email">Email address</label>
    <input type="email" class="form-control" id="email" placeholder="Email">
  </div>
  
  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" class="form-control" id="password" placeholder="Password">
  </div>
  
  <button id="signup" type="button" class="btn btn-primary">Sign-up</button>
  <button id="login" type="button" class="btn btn-success">Login</button>
  <button id="logout" type="button" class="btn btn-danger">Logout</button>
</form>

<script>
  var socket = io.connect('https://474134dfda5d4bec9144e2d75619ea24.vfs.cloud9.us-west-2.amazonaws.com/');

  socket.on('sign-in-success', data => {
    console.log(data);
  });
  
  socket.on('sign-in-failure', data => {
    console.log(data);
  });

  $(document).ready(() => {
    $('#signup').click(e => {
      var email = $('#email').val();
      var password = $('#password').val();

      socket.emit('sign-in-request', {
        email: email,
        password: password
      });
      
