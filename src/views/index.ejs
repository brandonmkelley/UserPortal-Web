<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  
  <body>
    <h1><%= title %></h1>
    <p>Hello <%= user %>, welcome to <%= title %> at <%= contentName %> | UserPortal</p>
    
    <br/>
    
    <form>
      <div class="form-group">
        <label for="email">Email address</label>
        <input type="email" class="form-control" id="email" placeholder="Email">
      </div>
      
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" id="password" placeholder="Password">
      </div>
      
      <button id="signup" type="button" class="btn btn-primary">Sign-up</button>
      <button id="login" type="button" class="btn btn-success">Login</button>
      <button id="logout" type="button" class="btn btn-danger">Logout</button>
    </form>
    
    <br/>
    
    Status: <p id="status"></p>
  </body>
  
  <script>
    $(document).ready(() => {
      alert('hello?')
      
      $('#signup').click(e => {
        $('#status').text('Posting...');
        
        var email = $('#email').val();
        var password = $('#password').val();
        
        $.ajax({
          url: 'users',
          type: 'POST',
          contentType: 'application/json',
          body: { email: email, password: password }
          success: alert,
          error: alert
        });
      });
      
      $('#login').click(e => {
        alert('hello')
      });
      
    });
  </script>
</html>
